<h1>New Post</h1>
<p><%= @user.name %><p>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |f| %>
      <!--<input type="hidden" name="post[user_id]" id="post_user_id" value= <%= @user.id %>>-->
      <%= hidden_field(:post, :user_id, value: @user.id) %>
      <%= f.label(:title) %><br>
      <%= f.text_field(:title, class: "form-control") %><br>
      <%= f.label(:content) %><br>
      <%= f.text_area(:content, class: "form-control") %><br>
      <%= f.submit("Post!", class: "btn btn-primary") %><br>
    <% end %>
  </div>
</div>
